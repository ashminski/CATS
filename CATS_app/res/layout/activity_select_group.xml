<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/groupListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="200dp" >
    </ListView>

    <EditText
        android:id="@+id/groupNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="153dp"
        android:layout_marginLeft="92dp"
        android:ems="10"
        android:hint="Group Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/groupPassBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groupNameBox"
        android:layout_alignTop="@+id/groupNameBox"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Group Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/submitGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/groupNameBox"
        android:layout_below="@+id/groupPassBox"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp"
        android:text="Submit" />

    <Button
        android:id="@+id/createGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submitGroupButton"
        android:layout_alignBottom="@+id/submitGroupButton"
        android:layout_marginRight="34dp"
        android:layout_toLeftOf="@+id/submitGroupButton"
        android:text="Create Group" />

    <TextView
        android:id="@+id/joinGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/groupNameBox"
        android:layout_alignBottom="@+id/groupNameBox"
        android:layout_toLeftOf="@+id/groupPassBox"
        android:text="Join Group:" />

</RelativeLayout>
